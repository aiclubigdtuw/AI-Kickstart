#Importing all the libraries

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

train = pd.read_csv("train.csv")

train

train [train ['profile pic'] ==0] ['#followers'].max()

train [(train ['profile pic'] ==0) & (train ['description length'] ==0) & (train ['#posts'] ==0)].shape[0]

mean_desc_len = train ['description length'].mean()
train [train['description length'] > mean_desc_len].shape[0]

train [ train ['#posts'] ==0] ['#followers'].max()

max_following = train ['#follows'].max()
print(max_following)

followers_of_max_following = train [ train ['#follows'] == max_following] ['#followers']
print(followers_of_max_following)

ratio = max_following / followers_of_max_following
print(ratio)
